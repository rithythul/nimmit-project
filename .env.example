# ===========================================
# Nimmit Environment Variables
# Copy this to .env.local and fill in values
# ===========================================

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/nimmit

# Redis (for BullMQ job queue)
REDIS_URL=redis://localhost:6379

# NextAuth.js
AUTH_SECRET=generate-a-32-char-random-string-here
AUTH_URL=http://localhost:3000

# Cloudflare R2 (S3-compatible storage)
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=nimmit-files
R2_PUBLIC_URL=https://your-bucket.r2.cloudflarestorage.com

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key

# Email (SendGrid or Resend)
EMAIL_API_KEY=your-sendgrid-or-resend-api-key
EMAIL_FROM=noreply@nimmit.com

# ClamAV (virus scanning)
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

# Sentry (error monitoring)
SENTRY_DSN=your-sentry-dsn
